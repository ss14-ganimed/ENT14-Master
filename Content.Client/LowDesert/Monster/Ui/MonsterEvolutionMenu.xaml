            SetSize="730 550"
            MinSize="730 550">
    <BoxContainer Orientation="Vertical">
            <BoxContainer Orientation="Horizontal" VerticalExpand="True" HorizontalExpand="True">
				<BoxContainer Orientation="Vertical" Name="Overview" Access="Public" VerticalExpand="False" HorizontalExpand="False" MinSize="300 300">
				</BoxContainer>
				<Control MinSize = "10 0"/>
